package simpleProblem;

import java.util.Scanner;

public class dustmqwkd {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.print("정수 입력 : ");
		int n = Integer.parseInt(sc.nextLine());
		int t=0;
		for(int i=2;i<=n;i+=2) {
			t+=i;
		}
		System.out.print(t);

	}

}
