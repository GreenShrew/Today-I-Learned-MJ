package days06;

public class ControlOpSwitch03 {

	public static void main(String[] args) {
		switch (month) {
		case 1:
			daytotal = 0;
			break;
		case 2:
			daytotal +=31;
			break;
		case 3:
			daytotal +=28;
			break;
		case 4:
			daytotal +=31;
			break;
		case 5:
			daytotal +=30;
			break;
		case 6:
			daytotal +=31;
			break;
		case 7:
			daytotal +=30;
			break;
		case 8:
			daytotal +=31;
			break;
		case 9:
			daytotal +=31;
			break;
		case 10:
			daytotal +=30;
			break;
		case 11:
			daytotal +=31;
			break;
		case 12:
			daytotal +=30;
			break;		
		}
		// 왜 2일 뒤로 밀리지?
		// 일단 다시한번 daytotal = 31+28+31+30+..으로 풀어보자.
		
		daytotal = daytotal+day;
		
		int x = daytotal%7;
		
		switch(x) {
		case 1:
			System.out.println("금요일");
			break;
		case 2:
			System.out.println("토요일");
			break;
		case 3:
			System.out.println("일요일");
			break;
		case 4:
			System.out.println("월요일");
			break;
		case 5:
			System.out.println("화요일");
			break;
		case 6:
			System.out.println("수요일");
			break;
		case 0:
			System.out.println("목요일");
			break;
	}

}
