package days02;

public class Printf03 {

	public static void main(String[] args) {
		// JavaSecond.java에 출력했던 성적표를 정확한 총점과 평균을 계산하여 출력하시오.
		// 평균을 출력할 때 소수점은 한 자리만 출력하자.
		// 국어 영어 수학 점수는 임의 점수를 사용하되, 총점 평균은 정확한 값으로 계산하라.
		// 각 항목은 모두 오른쪽 정렬되게 출력하라.		
		
		System.out.printf("\t\t ###성적표###\n");
		System.out.printf("----------------------------------------------------\n");

		System.out.printf("번호 1번의 총점 : %d, 평균 : %.1f\n", 89+87+56, (89+87+56)/3.0);
		System.out.printf("번호 2번의 총점 : %d, 평균 : %.1f\n", 53+77+100, (53+77+100)/3.0);
		System.out.printf("번호 3번의 총점 : %d, 평균 : %.1f\n", 29+23+300, (29+23+300)/3.0);
	}

}
