		con.setLayout(new GridLayout(3,2,20,20));
		
		ImageIcon ii1 = new ImageIcon("images/korea.gif");
		result = new JLabel("");
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		
	}
}
